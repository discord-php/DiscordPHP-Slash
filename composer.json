{
    "name": "discord-php/slash",
    "description": "HTTP server for Discord slash commands",
    "type": "library",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "David Cole",
            "email": "david.cole1340@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.3|>=8.0",
        "react/http": "^1.2",
        "symfony/options-resolver": "^5.2",
        "monolog/monolog": "^2.2",
        "guzzlehttp/guzzle": "^7.2",
        "discord/interactions": "^1.0.8",
        "discord-php/http": "^8"
    },
    "autoload": {
        "psr-4": {
            "Discord\\Slash\\": "src/Discord"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.2",
        "team-reflex/discord-php": "^6",
        "friendsofphp/php-cs-fixer": "^2.18"
    },
    "suggest": {
        "kambo/httpmessage": "Required for hosting the command server behind a CGI/FPM server.",
        "team-reflex/discord-php": "Provides an easier interface, where interactions are sent via websocket rather than a webhook."
    }
}
